<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fillWidth="false" prefHeight="100.0" prefWidth="185.0" styleClass="card" stylesheets="@../css/storycardStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="insightjournal.controllers.StorycardController">
   <children>
      <Text fx:id="date" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="date" text="Date: 25-05-2024">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Text>
      <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="storytitle" text="A Lonly Girl" wrappingWidth="175.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Text>
      <Button fx:id="readMoreButton" mnemonicParsing="false" onAction="#readMoreHandler" styleClass="readmorebutton" text="Read More">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
